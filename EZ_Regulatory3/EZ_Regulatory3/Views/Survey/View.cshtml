@model EZ_Regulatory3.Models.Survey

@{
    ViewBag.Title = "View";
}

<h2>View Checklist</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
    <legend>Checklist</legend>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">DateModified</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateStart)
    </div>

    <div class="display-label">Submitted</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Submitted)
    </div>

    <div class="display-label">Approved</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Approved)
    </div>

    <div class="display-label">Month</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Month)
    </div>

    <div class="display-label">DateAdded</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateAdded)
    </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Questions)
        </div>
        <div class="editor-field">
            <table style="width: 100%">
                <tr>
                    <th>
                        Question
                    </th>
                </tr>
                <tr>
                    @{
                        int cnt = 0;
                        List<EZ_Regulatory3.ViewModels.AssignedQuestionData> questions = ViewBag.Questions;
                        foreach (var question in questions)
                        {
                            if (cnt++ % 1 == 0) {
                                @:  </tr> <tr> 
                            }
                            @: <td> 
                                @question.QuestionID @:&nbsp; @question.Title
                            @:</td>
                        }
                        @: </tr>
                    }
            </table>
        </div>
        <div class="editor-field">
            <table style="width: 100%">
                <tr>
                    <th>
                        Users
                    </th>
                </tr>
                <tr>
                    @{
                        int cntTwo = 0;
                        List<EZ_Regulatory3.ViewModels.AssignedUserData> users = ViewBag.Users;
                        foreach (var user in users)
                        {
                            if (cntTwo++ % 1 == 0) {
                                @:  </tr> <tr> 
                            }
                            @: <td> 
                                @user.UserID @:&nbsp; @user.Name
                            @:</td>
                        }
                        @: </tr>
                    }
            </table>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
