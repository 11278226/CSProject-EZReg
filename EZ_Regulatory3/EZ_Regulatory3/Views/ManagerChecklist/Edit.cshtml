@model EZ_Regulatory3.Models.SurveyAnswer

@{
    ViewBag.Title = "Details";
}

<h2>Details for @ViewBag.UserName</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Checklist</legend>
        <div class="editor-field">
        <table> 
            <tr> 
                <th>Question</th> 
                <th>Answer</th> 
                <th>Comment</th> 
            </tr>
            @{
                List<EZ_Regulatory3.ViewModels.QuestionCommentsAndAnswers> questionsAndAnswers = ViewBag.Answers;
                foreach(var questionAndAnswer in questionsAndAnswers) {
                <tr>
                        <td>
                            @Html.DisplayFor(model => questionAndAnswer.Question)
                        </td>
                         <td> 
                            <input type="text" 
                                    name="questionAnswers" 
                                    value="@questionAndAnswer.QuestionAnswer" /> 
                            
                        </td>
                         <td> 
                            <input type="text" 
                                    name="questionComments" 
                                    value="@questionAndAnswer.QuestionComment" /> 
                            
                        </td>
                </tr>
                }
            }
        </table>
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
